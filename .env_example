# ============================================================================
# AI API Keys
# ============================================================================
# Primary LLM Provider (Required)
GOOGLE_API_KEY=your_google_api_key_here

# Fallback Providers (Optional)
GROQ_API_KEY=your_groq_key_here
OPENAI_API_KEY=sk-your_openai_key_here

# ============================================================================
# LLM Configuration
# ============================================================================
LLM_PROVIDER=gemini
GEMINI_MODEL_NAME=gemini-1.5-pro

# OpenAI Configuration (Fallback)
OPENAI_MODEL_NAME=gpt-4
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=2048
OPENAI_TIMEOUT=300

# ============================================================================
# Database Configuration
# ============================================================================
# PostgreSQL with pgvector (Required for advanced features)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/zenai

# Redis (Required for job queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ============================================================================
# Integrations
# ============================================================================

# Notion Integration (Required for task sync)
NOTION_API_KEY=your_notion_api_key_here
NOTION_DATABASE_ID=your_notion_database_id_here

# Jira Integration (Optional - for issue tracking)
JIRA_BASE_URL=https://your-domain.atlassian.net
JIRA_EMAIL=your-email@example.com
JIRA_API_TOKEN=your_jira_api_token

# Slack Integration (Optional - for notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# Microsoft Teams Integration (Optional - for notifications)
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/WEBHOOK/URL

# ============================================================================
# Email Configuration (Required for Follow-up Agent)
# ============================================================================
EMAIL_SERVICE=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
NOTIFICATION_EMAIL=notifications@yourcompany.com

# ============================================================================
# AWS S3 Configuration (Optional - for audio file storage)
# ============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# ============================================================================
# Security & Privacy
# ============================================================================
# Projects ending with this suffix will have privacy mode enabled
SECURE_PROJECT_SUFFIX=-secure

# Encryption key for sensitive data (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your_32_byte_hex_encryption_key

# ============================================================================
# Scheduler Configuration
# ============================================================================
# Follow-up Agent schedule (cron format: minute hour day month day_of_week)
FOLLOWUP_AGENT_SCHEDULE=0 9 * * *  # Daily at 9 AM

# Daily report schedule
DAILY_REPORT_SCHEDULE=0 8 * * *  # Daily at 8 AM

# Task inactivity threshold (days)
TASK_INACTIVITY_THRESHOLD=3

# ============================================================================
# Application Configuration
# ============================================================================
APP_ENV=development
LOG_LEVEL=INFO
DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_FOLLOWUP_AGENT=true
ENABLE_REPETITION_DETECTOR=true
ENABLE_SECURITY_MANAGER=true
ENABLE_SOCKETIO=true